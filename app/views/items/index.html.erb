<div class="container my-5">
  <div class="row">

  <div class="col-md-10">
    <h3 class="item-index">商品一覧（全<%= @items.count %>件）</h3>
    <div id="item">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <table>
          <tr>
            <td>
              <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %>
              <% end %><br>
              <%= item.name %><br>
              ¥<%= item.price * 1.1.floor %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
    <!-- １ページに８件表示する -->
    <%= paginate @items %>
    </div>
  </div>
</div>