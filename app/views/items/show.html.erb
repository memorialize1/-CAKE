<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-bordered">
        <th class="genre-th">Genre</th>
        <% @genres.each do |f|%>
        <% if f.status == true %>
        <tr class="genre-tr">
          <td class="genre-td">
            <%# ジャンルが無効なら表示しない %>
            <%= link_to f.name, genre_path(f.id) %>
            <% end %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class = "col-md-3">
    <!-- 商品画像 -->
      <%= attachment_image_tag @item, :item_image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %>
    </div>
    <div class = "col-md-6">
      <!-- 商品名 -->
      <%= @product.name %><br>
      <!-- 商品説明 -->
      <%= @item.description %><br>
      <!-- 価格 -->
      <%= @item.tax_included.to_s(:delimited) %>円<br>
      <!-- カートに入れるボタン -->
      <div class = "pt-5">
        <%= form_for @cart ,url: user_carts_path(@user) do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.select :stock, options_for_select((1..10).to_a), include_blank: "個数選択" %>
        <%= f.submit "カートに入れる",class: 'btn-item' %>
      <% end %></div>
    </div>
  </div>
</div>