<% if @delivery.errors.any? %>
<h3><%= @delivery.errors.count %>個のエラーがあります。</h3>
<% @delivery.errors.full_messages.each do |message| %>
<ul>
  <li><%= message %></li>
</ul>

<% end %>
<% end %>

<div class="container delivery-page">
  <%= form_for(@delivery, url: user_delivery_path, html: {method: "patch"}) do |f| %>
  <h4 class="row ml-5 order-title d-inline">配送先編集</h4>


  <div class="row mt-3 mb-2">
    <div class="col-md-3">
      <span>郵便番号（ハイフンなし）</span>
    </div>
    <div class="col-md-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-3 mb-2">
    <div class="col-md-3">
      <span>住所</span>
    </div>
    <div class="col-md-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-3 mb-2">
    <div class="col-md-3">
      <span>宛名</span>
    </div>
    <div class="col-md-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="col-md-1 offset-2">
      <%= f.submit "編集する", class: "btn db-btn px-3" %>
    </div>

  </div>
</div>

<% end %>

</div>