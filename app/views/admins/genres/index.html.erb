<div class="container my-5">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row mt-5">
    <div class = "col-sm-5">
    <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名, class: "col-sm-3" %>
        <%= f.text_field :name, class: "form-control col-sm-4" %>
        <%= f.submit :新規登録, class: "col-sm-3 ml-5 btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>


  <div class="row mt-5">
    <div class = "col-sm-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>