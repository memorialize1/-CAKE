<div class="container my-5">
  <div class="row">
    <div class="col-sm-4">
      <h2>商品 新規登録画面</h2>
    </div>
  </div>

  <%= form_with model: @item, url: admins_items_path, local:true do |f| %>

    <div class="row justify-content-center mt-5">
      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品画像, class: "col-sm-4" %>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-group row">
          <%= f.label :商品名, class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :商品説明, class: "col-sm-4" %>
          <%= f.text_area :introduction, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :ジャンル, class: "col-sm-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :税抜き価格, class: "col-sm-4" %>
          <%= f.text_field :price, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
        </div>

        <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
          <%= f.radio_button :sale_status, :販売中 %>
          <%= f.label :sale_status, '販売中' %>
          <%= f.radio_button :sale_status, :販売停止中 %>
          <%= f.label :sale_status, '販売停止中' %>
        </div>
      </div>
    </div>

      <div class="row justify-content-center mt-5">
        <div class="col-sm-3">
          <%= f.submit :新規登録, class: "btn btn-primary" %>
        </div>
      </div>


  <% end %>

</div>