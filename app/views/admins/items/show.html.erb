<div class="container my-5">
  <div class="row pl-5">
      <h4 class = "bg-light">商品詳細</h2>
  </div>

  <div class = "row mt-4 justify-content-center">
      <div class = "col-sm-3">
        <%= attachment_image_tag @item, :image, size: "200x200", format: 'jpeg' %>
      </div>

      <div class = "col-sm-5">
          <table class="table table-borderless">
              <tbody>
                  <tr>
                      <td>商品名</td>
                      <td><%= @item.name %></td>
                  </tr>

                  <tr>
                      <td>商品説明</td>
                      <td><%= @item.introduction %></td>
                  </tr>

                  <tr>
                      <td>ジャンル</td>
                      <td><%= @item.genre.name %></td>
                  </tr>

                  <tr>
                      <td>税込価格</br>(税抜価格)</td>
                      <td><%= @item.price %>（<%= (@item.price * 1.1).floor %>）円</td>
                  </tr>

                  <tr>
                      <td>販売ステータス</td>
                      <td><%= @item.sale_status %></td>
                  </tr>

              </tbody>
          </table>
      </div>
  </div>

  <div class = "row mt-4 justify-content-center">
      <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success" %>
  </div>
</div>











