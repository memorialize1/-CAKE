      </div>
    	<%= form_for(@address_new) do |f| %>
        <div class="form-group row">
      		<%= f.text_field :post_code, class: "form-control", placeholder: "郵便番号" %>
        </div>

        <div class="form-group row">
      		<%= f.text_field :address, class: "form-control", placeholder: "住所" %>
        </div>

        <div class="form-group row">
      		<%= f.text_field :l_name, class: "form-control col-6", placeholder: "姓" %>
      		<%= f.text_field :f_name, class: "form-control col-6", placeholder: "名" %>
        </div>

        <div class="row">
    		  <%= f.submit "登録する", class: "btn btn-primary btn-outline-danger mx-auto" %>
        </div>
    	<% end %>
    </div>

    <div class="offset-1 col-6">
    <table class="table table-borderless table-hover">
      <thead>
       <tr class="red-border">
         <th>郵便番号</th>
         <th>住所</th>
         <th>妙</th>
         <th>名</th>
         <th></th>
       <tr>
      </thead>

     <tbody>
    <% @address.each do |address| %>
    <tr class="brown-border">
     	<td><%= address.post_code %></td>
     	<td><%= address.address %></td>
     	<td><%= address.l_name %><%= address.f_name %></td>
     	<td><%= link_to "編集する", edit_address_path(address),  class: "btn btn-sm btn-outline-danger" %>
          <%= link_to "削除する", address_path(address), method: :delete ,data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
     </tr>
  <% end %>
     </tbody>
    </table>
  </tr>
</tr>
</thead>
</table>
</div>


